{
	"name": "sammaye/yii2-advanced-template",
	"description": "A template for awesomeness.",
	"keywords": ["yii2", "framework", "advanced", "application template"],
	"homepage": "http://www.sammaye.wordpress.com/",
	"type": "project",
	"license": "BSD-3-Clause",
	"support": {
		"issues": "https://github.com/Sammaye/yii2-test/issues",
		"source": "https://github.com/Sammaye/yii2-test"
	},
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.4.0",
		"fxp/composer-asset-plugin": "^1.0.0",
		"yiisoft/yii2": "~2.0.0@stable",
		"yiisoft/yii2-bootstrap": "~2.0.0@stable",
		"yiisoft/yii2-swiftmailer": "~2.0.0@stable",
		"yiisoft/yii2-jui": "~2.0.0@stable",
		"yiisoft/yii2-imagine": "~2.0.0@stable",
		"yiisoft/yii2-authclient": "~2.0.0@stable",
		"yiisoft/yii2-mongodb": "~2.1.0",
		"bower-asset/jquery": "~1.11@stable",
		"bower-asset/jquery-ui": "~1.11@stable",
		"ivaynberg/select2": "*",
		"aws/aws-sdk-php": "^3.0@stable",
		"ofat/yii2-yashop-ses": "*",
		"facebook/php-sdk-v4": "^5.0@stable",
		"guzzlehttp/guzzle": "^6.0@stable",
		"mongodb/mongodb": "^1.0.0"
	},
	"require-dev": {
		"yiisoft/yii2-codeception": "*",
		"yiisoft/yii2-debug": "*",
		"yiisoft/yii2-gii": "*",
		"yiisoft/yii2-faker": "*"
	},
	"scripts": {
		"post-create-project-cmd": [
			"yii\\composer\\Installer::setPermission"
		]
	},
	"config": {
		"process-timeout": 1800
	},
	"extra": {
		"writable": [
			"backend/runtime",
			"backend/web/assets",

			"frontend/runtime",
			"frontend/web/assets"
		],
		
		"asset-installer-paths": {
			"npm-asset-library": "vendor/npm",
			"bower-asset-library": "vendor/bower"
		}
	}
}
